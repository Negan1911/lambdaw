{
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "commonjs": true
  },
  "plugins": [
    "node",
    "jest",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "arrowFunctions": true,
        "classes": true,
        "destructuring": true,
        "spread": true,
        "experimentalObjectRestSpread": true
      }
  },
  "rules": {
    "no-extra-semi": 0,
    "no-mixed-spaces-and-tabs": 0,
    "node/no-unpublished-require": 0,
    "linebreak-style": ["error", "unix"],
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "semi": false,
        "printWidth": 80
      }
    ]
  }
}